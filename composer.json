{
    "name": "hexlet/code",
    "license": "MIT",
    "authors": [
        {
            "name": "Shangrion",
            "email": "lvdmyta6op@gmail.com"
        }
    ],
    "require": {
        "docopt/docopt": "^1.0",
        "funct/funct": "^1.6",
        "symfony/yaml": "^6.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/phpfunct/funct"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "autoload": {
        "psr-4": {
            "Hexlet\\Code\\": "src/"
        },
        "files": [
          "src/Differ.php",
          "src/Parsers/Parser.php",
          "src/Formatters/Stylish.php",
          "src/Formatters/Formatters.php",
          "src/Formatters/Plain.php",
          "src/Formatters/Json.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Hexlet\\Code\\Tests\\": "tests/"
        }
    },
    "scripts": {
    "test": "phpunit --colors=always"
    },
    "bin": [
        "bin/gendiff"
    ]
}
