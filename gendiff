#!/usr/bin/env php
<?php

require __DIR__ . '/vendor/autoload.php';

// Явно подключаем docopt.php, потому что он не автозагружается через Composer
require_once __DIR__ . '/vendor/docopt/docopt/src/docopt.php';

use function Hexlet\Code\genDiff;

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]
DOC;

$arguments = Docopt::handle($doc, ['version' => 'gendiff 1.0']);

$firstFile = $arguments['<firstFile>'];
$secondFile = $arguments['<secondFile>'];

echo genDiff($firstFile, $secondFile) . "\n";